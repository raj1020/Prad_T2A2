<p id="notice"><%= notice %></p>

<h1>Cooks Foods</h1>

<table>
  <thead>
    <tr>
      <th>Cook</th>
      <th>Food</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cooks_foods.each do |cooks_food| %>
      <tr>
        <td><%= cooks_food.cook %></td>
        <td><%= cooks_food.food %></td>
        <td><%= cooks_food.price %></td>
        <td><%= link_to 'Show', cooks_food %></td>
        <td><%= link_to 'Edit', edit_cooks_food_path(cooks_food) %></td>
        <td><%= link_to 'Destroy', cooks_food, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

